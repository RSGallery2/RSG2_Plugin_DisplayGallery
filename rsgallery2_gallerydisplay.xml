	<creationDate>10 Jan. 2015</creationDate>
	<copyright>(C) 2012-2015 RSGallery2 Team. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorUrl>www.rsgallery2.nl</authorUrl>
	<version>3.2.1</version>
	<description>PLG_CONTENT_RSGALLERY2_GALLERYDISPLAY_XML_DESCRIPTION</description>

	<files>
		<filename plugin="rsgallery2_gallerydisplay">rsgallery2_gallerydisplay.php</filename>
		<filename>index.html</filename>
	</files>
	
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_content_rsgallery2_gallerydisplay.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_content_rsgallery2_gallerydisplay.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="debug" type="list" default="0" label="PLG_CONTENT_RSGALLERY2_GALLERYDISPLAY_DEBUG_LABEL" description="PLG_CONTENT_RSGALLERY2_GALLERYDISPLAY_DEBUG_DESCRIPTION">
					<option value="0">JDISABLED</option>
					<option value="1">JENABLED</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
