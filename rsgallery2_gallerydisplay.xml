<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="content" method="upgrade">
	<name>PLG_CONTENT_RSGALLERY2_GALLERYDISPLAY</name>
	<author>Jonathan DeLaigle, Jonah Braun, Mirjam Kaizer, RSGallery2 Team</author>
	<creationDate>07 Jun 2018</creationDate>
	<copyright>(C) 2012-2018 RSGallery2 Team. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <authorEmail>team@rsgallery2.org</authorEmail>
	<authorUrl>www.rsgallery2.org</authorUrl>
	<version>4.0.2</version>
	<description>PLG_CONTENT_RSGALLERY2_GALLERYDISPLAY_XML_DESCRIPTION</description>

	<files>
		<filename plugin="rsgallery2_gallerydisplay">rsgallery2_gallerydisplay.php</filename>
		<filename>index.html</filename>
		<folder>language</folder>
	</files>
	
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_content_rsgallery2_gallerydisplay.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_content_rsgallery2_gallerydisplay.sys.ini</language>
	</languages>

	<config>
		<fields 
			name="params">
			<fieldset 
				name="basic">

				<field 
					name="debug" 
					type="radio" 
					class="btn-group btn-group-yesno" 
					default="0" 
					label="PLG_CONTENT_RSGALLERY2_GALLERYDISPLAY_DEBUG_LABEL" 
					description="PLG_CONTENT_RSGALLERY2_GALLERYDISPLAY_DEBUG_DESCRIPTION">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
		</fields>
	</config>
	
	<updateservers>
		<server type="extension"
		        priority="1"
		        name="Github RSGallery2 plugin gallery display updates">https://github.com/RSGallery2/RSGallery2_Plugin_DisplayGallery/raw/master/update.xml
		</server>
	</updateservers>
</extension>

